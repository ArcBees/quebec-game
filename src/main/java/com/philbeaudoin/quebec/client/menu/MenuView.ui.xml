<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:c='urn:import:com.philbeaudoin.quebec.client.widget'>

    <g:DockLayoutPanel unit="PX">
        <g:north size="30">
            <g:Label>Quebec</g:Label>
        </g:north>
        <g:center>
            <g:LayoutPanel ui:field="center">
              <g:layer>
              <g:FlowPanel>
              <g:Hyperlink targetHistoryToken="game;t=1">Tutorial</g:Hyperlink>
              <g:Hyperlink targetHistoryToken="game;n=3">Quick solo 3 player game</g:Hyperlink>
              <g:Hyperlink targetHistoryToken="game;n=4">Quick solo 4 player game</g:Hyperlink>
              <g:Hyperlink targetHistoryToken="game;n=5">Quick solo 5 player game</g:Hyperlink>
              <g:FlowPanel ui:field="createLinks">
                  <g:Hyperlink ui:field="new3p">Create a multiplayer 3 player game</g:Hyperlink>
                  <g:Hyperlink ui:field="new4p">Create a multiplayer 4 player game</g:Hyperlink>
                  <g:Hyperlink ui:field="new5p">Create a multiplayer 5 player game</g:Hyperlink>
              </g:FlowPanel>
              <g:FlowPanel ui:field="gameList">
              </g:FlowPanel>
              <g:HTMLPanel ui:field="googleButton">
                  <span class="g-signin"
                    data-scope="https://www.googleapis.com/auth/plus.login https://www.googleapis.com/auth/plus.me"
                    data-clientid="161973045206.apps.googleusercontent.com"
                    data-redirecturi="postmessage"
                    data-accesstype="offline"
                    data-cookiepolicy="single_host_origin"
                    data-callback="signInCallback">
                  </span>
              </g:HTMLPanel>
              </g:FlowPanel>
              </g:layer>
            </g:LayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>